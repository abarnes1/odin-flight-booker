<%= form_with model: booking do |form| %>
  <div class="columns is-centered">
    <p class="column is-4 is-size-4 has-text-weight-bold">Booking Contact:</p>
    <div class="column is-4 px-0 py-0"></div>
  </div>
  
  <div class="columns is-centered">
    <div class="column is-4">
      <%= form.label :name, 'Name', class: 'label' %>
      <%= form.text_field :name, class: 'input', placeholder: 'Name', required: true %>
    </div>

    <div class="column is-4">
      <%= form.label :email, 'Email', class: 'label' %>
      <%= form.email_field :email, class: 'input', placeholder: 'Email', required: true %>
    </div>
  </div>

  <div class="columns is-centered">
    <div class="column is-4 is-size-4 has-text-weight-bold mb-0">Passenger Details:</div>
    <div class="column is-4 px-0 py-0"></div>
  </div>

  <%= form.fields_for :passengers do |passengers_form| %>
    <div class="columns is-centered">
      <div class="column is-4 is-size-5 has-text-weight-bold mb-0 pb-0">
        <%= "Passenger #{passengers_form.index + 1}" %>
      </div>
      <div class="column is-4 px-0 py-0"></div>
    </div>

    <div class="columns is-centered">
      <div class="column is-4 pt-1">
        <%= passengers_form.label :name, 'Name', class: 'label' %>
        <%= passengers_form.text_field :name, class: 'input', placeholder: 'Name', required: true %>
      </div>

      <div class="column is-4 pt-1">
        <%= passengers_form.label :email, 'Email', class: 'label' %>
        <%= passengers_form.email_field :email, class: 'input', placeholder: "Email", required: true %>
      </div>
    </div>
  <% end %>

  <%= form.hidden_field :flight_id, value: booking.flight_id %>
  <div class="has-text-centered">
    <%= form.submit 'Book Flight', class: 'button' %>
  </div>
<% end %>