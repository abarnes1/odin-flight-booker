<section>
  <h1 class="is-size-2 has-text-centered py-4">Booking Details</h1>

  <div class="container">
    <p>Flight:</p>
    <p id='<%= dom_id(@booking) %>'><%= flight_summary(@booking.flight) %></p>

    <p class=pt-4>Confirmation Code:</p>
    <p><%= @booking.confirmation_code %></p>

    <p class="pt-4">Booked By:</p>
    <p><%= @booking.name %> (<%= @booking.email %>)</p>

    <p class="pt-4">Passengers:</p>
    <% @booking.passengers.each do |passenger| %>
        <p><%= passenger.name %> (<%= passenger.email %>)</p>
    <% end %>
  </div>
</section>